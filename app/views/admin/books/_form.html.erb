<div class="mb-5">
  <%= f.label :title, class: "form-label font-semibold" %>
  <%= f.text_field :title, class: "form-control", autofocus: true %>
</div>

<div class="mb-5">
  <%= f.label :author, class: "form-label" %>
  <%= f.text_field :author, class: "form-control" %>
</div>

<div class="mb-5">
  <%= f.label :authored_at, "Year", class: "form-label" %>
  <%= f.number_field :authored_at, class: "form-control", min: 50, max: 9999 %>
</div>

<%= f.submit class: "btn btn-primary" %>
